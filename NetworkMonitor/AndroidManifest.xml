<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ms.networkmonitor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.tetsuo83.netexp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.tetsuo83.netexp.RunningServices"
            android:label="@string/title_activity_running_services"
            android:parentActivityName="net.tetsuo83.netexp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ms.networkmonitor.MainActivity" />
        </activity>

        <service android:name="net.tetsuo83.netexp.NetworkConfigService" >
        </service>
        <service android:name="net.tetsuo83.netexp.RecordNetworkInfoService" >
        </service>
        
        <activity
            android:name="net.tetsuo83.netexp.ServicesActivity"
            android:label="@string/title_activity_services"
            android:parentActivityName="net.tetsuo83.netexp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ms.networkmonitor.MainActivity" />
        </activity>
        <service android:permission="android.permission.INTERNET" android:name="net.tetsuo83.nrlexpupload.NrlExpUploadService"></service>
    </application>

</manifest>